<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarSharing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CarSharing</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            @if (User.IsInRole("admin"))
                            {
                                <div class="dropdown float-left">
                                    <button class="btn btn-link dropdown-toggle text-dark" type="button" id="dropdownMenuUsers" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        User manager
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuStaff">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Roles" asp-action="Index">Roles</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                                    </div>
                                </div>
                            }
                            <div class="dropdown float-left">
                                <button class="btn btn-link dropdown-toggle text-dark" type="button" id="dropdownMenuUsers" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Cars
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuStaff">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="CarMarks" asp-action="Index">CarMarks</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="CarModels" asp-action="Index">CarModels</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Cars" asp-action="Index">Cars</a>
                                </div>
                            </div>
                            <div class="dropdown float-left">
                                <button class="btn btn-link dropdown-toggle text-dark" type="button" id="dropdownMenuUsers" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Rents
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuStaff">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Services" asp-action="Index">Services</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="AdditionalServices" asp-action="Index">AdditionalServices</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Rents" asp-action="Index">Rents</a>
                                </div>
                            </div>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Employees" asp-action="Index">Employees</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="Index">Customers</a>
                            </li>
                        </ul>
                    </div>
                }
                <div class="float-right">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Account" asp-action="Login">Login</a>
                        <a asp-controller="Account" asp-action="Register">Register</a>
                    }
                    else
                    {
                        <form method="post" asp-controller="Account" asp-action="Logout">
                            <label>Welcome, @User.Identity.Name</label>
                            <input type="submit" value="Logout" class="btn btn-link" />
                        </form>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - CarSharing - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
